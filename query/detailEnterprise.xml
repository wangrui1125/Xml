	  <column name="guwenID" title="企业顾问">
	  S_User.Name
      </column>  
       <column name="Enp_Name" title="企业名称" width="200px" type="link" urlformatstring="Tmp/MyEdit.aspx?n=editEnterprise&amp;id={0}" usefields="id" target="_blank">
