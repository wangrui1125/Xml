<column name="zplan" usefields="id" type="iframe" urlformatstring="tmp/MyQuery.aspx?n=listdetailtech&amp;id={0}&amp;pagesize=5" maxlength="310" colspan="2" parameter="id" parametervalue="!">
      </column>
