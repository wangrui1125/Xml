      </column>
    </select>
    <from type="table">
      <table title="企业信息">Enterprise</table>	
	  <table title="顾问信息">left join S_User on S_User.ID=Enterprise.guwenID</table> 	  
    </from>
    <where isparameter="true" isshowappend="true" issession="false">
      <append type="querystring" name="id">
        Enterprise.Enp_ID={0}
      </append>
    </where>     
