<?xml version="1.0" encoding="utf-8"?>
<root xmlns="http://121.18.78.216" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://121.18.78.216 ..\Demo.xsd">
  <myquery title="我的顾问(执行的)" islogicdeal="false" isfirstload="true" allowsorting="true" allowpaging="true" pagervisible="true">
    <select keycolumnnames="id" ismultiselect="false" isshowrownum="false" sortdirection="ascending">

    <column name="id"  visible="false" >
        Consult.Consult_ID
      </column>
 <column name="name" title="顾问姓名" width="100px"   type="link" urlformatstring="Tmp/MyDetail.aspx?n=detailuserInfo0&amp;id={0}" usefields="id" target="_blank">
        
        Consult.Consult_Name
      </column>
       <column name="email" title="顾问级别" width="60px"  >
         Consult.Consult_Level
       </column>
      <column name="tel" title="顾问单位" width="40px"  >
        Consult.Consult_Unit
      </column>
      <column name="dep" title="擅长领域" width="60px"  >
       Consult.Consult_Fields
      </column>
    </select>
    <from type="table">
      <table title="顾问">Consult</table>
<table title="科技需求">left join TechRequire on  (TechRequire.Rq_CreaterID=Consult.Consult_ID or TechRequire.Rq_ConsultID=Consult.Consult_ID or TechRequire.Rq_DoID=Consult.Consult_ID or TechRequire.Rq_techConsultID=Consult.Consult_ID)</table>
 
          
      
    </from>
    <where isparameter="true" isshowappend="true" issession="true">
       
      <append type="querystring" name="ID" title="所属科技需求类型">
        TechRequire.Rq_CreaterID={0}
      </append>
     
     

    </where>
   <group>
[Consult_ID]
      ,[Consult_Level]
      ,[Consult_Unit]
      ,[Consult_Fields]
      ,[Consult_notes]
      ,[Consult_Name]
      ,[ID]
      ,[Consult_Tel]
      ,[Consult_email]
      ,[Consult_Add]
      ,[Consult_Officephone]
      ,[Consult_qq]
</group>
     <order>
     Consult_ID
 </order>
  </myquery>
</root>